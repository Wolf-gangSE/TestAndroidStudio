<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_x="140dp"
        android:layout_y="346dp"
        android:text="Buscar"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="visible"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="106dp"
        android:layout_y="224dp"
        android:ems="10"
        android:hint="CEP"
        android:inputType="textPersonName" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="179dp"
        android:layout_y="472dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="218dp"
        android:layout_height="72dp"
        android:layout_x="103dp"
        android:layout_y="68dp"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="Digite seu CEP e aperte no botão Buscar para encontrar as informações"
        android:textColor="#000000" />

</AbsoluteLayout>
